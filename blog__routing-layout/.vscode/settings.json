{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.indentSize": 2,
    "editor.tabSize": 2,
    "git.openRepositoryInParentFolders": "always",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".cache": true,
        ".eslintrc.js": true,
        ".gitignore": true,
        ".prettierrc.json": true,
        "jsconfig.json": true,
        "package-lock.json": true,
        "README.md": true,
        "remix.config.js": true,
        "yarn.lock": true,
        "build": true,
        "app/entry.client.jsx": true,
        "app/entry.server.jsx": true,
        "node_modules": true,
        "tailwind.config.js": true
    },
    "hide-files.files": [
        ".cache",
        ".eslintrc.js",
        ".gitignore",
        ".prettierrc.json",
        "jsconfig.json",
        "package-lock.json",
        "README.md",
        "remix.config.js",
        "yarn.lock",
        "build",
        "app/entry.client.jsx",
        "app/entry.server.jsx",
        "node_modules",
        "tailwind.config.js"
    ],
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
}